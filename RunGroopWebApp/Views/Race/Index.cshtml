@model IEnumerable<Race>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">
            @foreach (var items in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@items.Image" width="100%" height="225" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@items.Title</p>
                            <p class="card-text">@items.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Race" asp-action="Detail" asp-route-id="@items.Id" type="button"
                                   class="btn btn-sm btn-outline-secondary">View</a>
                                    <a asp-controller="Race" asp-action="Edit" asp-route-id="@items.Id" type="button"
                                   class="btn btn-sm btn-outline-secondary">Edit</a>
                                </div>
                                <small class="text-muted">@items.RaceCategory</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>